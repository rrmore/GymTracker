<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#424242">

    <TextView
        android:id="@+id/first_name_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="32dp"
        android:layout_marginTop="22dp"
        android:text="First Name"
        android:textColor="@color/white"
        android:textSize="20dp"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <EditText
        android:id="@+id/first_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/first_name_lable"
        android:layout_below="@+id/first_name_lable"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/last_name_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/first_name_text"
        android:layout_below="@+id/first_name_text"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="Last Name"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <EditText
        android:id="@+id/last_name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/last_name_lable"
        android:layout_below="@+id/last_name_lable"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/age_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/last_name_text"
        android:layout_below="@+id/last_name_text"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="Age"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <EditText
        android:id="@+id/age_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/age_lable"
        android:layout_below="@+id/age_lable"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/sex_lable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/sex_text"
        android:layout_below="@+id/age_text"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:textColor="@color/white"
        android:text="Sex"
        android:textAppearance="@android:style/TextAppearance.Material.Medium" />

    <EditText
        android:id="@+id/sex_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_text_border"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_below="@+id/sex_lable"
        android:layout_alignStart="@+id/age_text"
        android:layout_alignEnd="@+id/age_text" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:background="@drawable/roundedbutton"
        android:textColor="@color/white"
        android:text="Save"
        android:layout_below="@+id/sex_text"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
</android.support.v4.widget.NestedScrollView>